{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "g++",
            "args": [
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}.exe",
                "-I/path/to/glfw3/include",
                "-L/path/to/glfw3/lib",
                "-lglfw3",
                "-lopengl32",
                "-lUser32",
                "-lGdi32",
                "-lShell32",
                "-lglew32s"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": "$msCompile"
        }
    ]
}
