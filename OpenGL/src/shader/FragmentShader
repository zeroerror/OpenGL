#version 330 core

in vec3 color;

layout(location = 0) out vec4 frag_color;

void main()
{
    vec3 red = vec3(1.0, 0.0, 0.0);
    vec3 green = vec3(0.0, 1.0, 0.0);
    vec3 blue = vec3(0.0, 0.0, 1.0);
    
    vec3 interpolated_color = mix(mix(red, green, gl_FragCoord.y / 600.0), blue, gl_FragCoord.y / 600.0);
    
    frag_color = vec4(interpolated_color, 1.0);
}