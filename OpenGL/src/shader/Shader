#shader vertex
#version 330 core

layout(location = 0) in vec4 position;
layout(location = 1) in vec3 color_in;

out vec3 color;

void main()
{
    gl_Position = position;
    color = color_in;
}

#shader fragment
#version 330 core

layout(location = 0) out vec4 frag_color;

uniform vec4 u_Color;

void main()
{
    frag_color = u_Color;
}